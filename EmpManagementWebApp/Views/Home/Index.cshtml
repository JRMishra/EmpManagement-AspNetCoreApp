@model IEnumerable<EmpManagementWebApp.Models.Employee>

    <html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <title></title>
    </head>
    <body>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>&emsp;Name</th>
                    <th>&emsp;Department</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var employee in Model)
                {
                    <tr>
                        <td>@employee.Id</td>
                        <td>&emsp;@employee.Name</td>
                        <td>&emsp;@employee.Department</td>
                    </tr>
                }
            </tbody>
        </table>
    </body>
    </html> 

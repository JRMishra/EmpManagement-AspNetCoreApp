@model IEnumerable<EmpManagementWebApp.Models.Employee>
   
@{ 
    ViewBag.Title = "Employee List";
}

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>&emsp;Name</th>
            <th>&emsp;Department</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>&emsp;@employee.Name</td>
                <td>&emsp;@employee.Department</td>
            </tr>
         }
    </tbody>
</table>
    
